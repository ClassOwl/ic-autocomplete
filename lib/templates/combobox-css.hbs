ic-combobox {
  display: inline-block;
  position: relative;
}

ic-combobox-list {
  display: none;
  position: absolute;
  border: 1px solid #aaa;
  top: 100%;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
  padding: 5px 10px;
  max-height: 400px;
  max-height: 80vh;
  overflow: auto;
}

ic-combobox-list[is-open] {
  display: block;
}

ic-combobox-option {
  display: block;
  padding: 2px 0;
}

ic-combobox-option:focus {
  color: red;
}

ic-combobox-toggle {
  display: inline-block;
  outline: none;
  position: absolute;
  top: 6px;
  right: 6px;
  font-size: 10px;
  cursor: default;
}

.ic-combobox-input {
  padding-right: 20px;
  width: 100%;
  box-sizing: border-box;
}

