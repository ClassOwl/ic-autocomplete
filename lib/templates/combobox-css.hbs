ic-combobox {
  display: inline-block;
  position: relative;
}

ic-combobox-list {
  display: none;
  position: absolute;
  border: 1px solid #aaa;
  top: 100%;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
  padding: 5px 0px;
  max-height: 400px;
  max-height: 80vh;
  overflow: auto;
}

ic-combobox.is-open ic-combobox-list {
  display: block;
}

ic-combobox-option {
  display: block;
  padding: 2px 5px;
  cursor: default;
}

ic-combobox-option:focus {
  outline: 0;
  color: white;
  background: hsl(200, 50%, 50%);
}

ic-combobox-toggle {
  display: inline-block;
  outline: none;
  position: absolute;
  top: 2px;
  right: 6px;
  font-size: 14px;
  cursor: default;
}

.ic-combobox-input {
  padding-right: 20px;
  width: 100%;
  box-sizing: border-box;
}


