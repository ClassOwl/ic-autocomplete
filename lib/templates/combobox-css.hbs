ic-combobox {
  display: inline-block;
  position: relative;
}

ic-combobox-list {
  display: none;
  position: absolute;
  z-index: 0;
  border: 1px solid #aaa;
  top: 100%;
  padding: 5px 0px;
  max-height: 400px;
  overflow: auto;
  font-size: 12px;
  width: 100%;
  box-sizing: border-box;
}

ic-combobox[is-open] ic-combobox-list {
  display: block;
}

ic-combobox-option {
  display: block;
  padding: 2px 16px;
  cursor: default;
}

ic-combobox-option:focus {
  outline: 0;
  color: white;
  background: hsl(200, 50%, 50%);
}

ic-combobox-option[selected]:before {
  content: 'âœ“';
  position: absolute;
  left: 4px;
}

ic-combobox-toggle {
  display: inline-block;
  outline: none;
  position: absolute;
  top: 2px;
  right: 6px;
  font-size: 14px;
  cursor: default;
  z-index: 1;
}

.ic-combobox-input {
  position: relative;
  z-index: 1;
  padding-right: 20px;
  width: 100%;
  box-sizing: border-box;
}

